{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://guided.engineering/schema/persona.schema.json",
  "title": "Guided Engineering Persona Schema",
  "description": "Schema for AI agent personas in Guided Engineering methodology",
  "type": "object",
  "required": ["id", "name", "role", "expertise", "responsibilities"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Z][a-zA-Z0-9]*$",
      "description": "Unique persona identifier (PascalCase)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable persona name"
    },
    "role": {
      "type": "string",
      "description": "Primary role or job title"
    },
    "expertise": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Areas of expertise"
    },
    "responsibilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key responsibilities and tasks"
    },
    "skills": {
      "type": "object",
      "properties": {
        "technical": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Technical skills"
        },
        "soft": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Soft skills"
        }
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Preferred tools and technologies"
    },
    "context": {
      "type": "string",
      "description": "Additional context and behavioral guidelines"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Constraints or limitations"
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "scenario": {
            "type": "string"
          },
          "response": {
            "type": "string"
          }
        }
      },
      "description": "Example scenarios and responses"
    }
  }
}
